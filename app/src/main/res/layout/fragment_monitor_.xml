<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#eee"
        android:orientation="horizontal">

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_to1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_to2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_to3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_to4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <com.myapp.smartagricultureplus.DiyView.MonitorTabView
            android:id="@+id/tab_monitor_to5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_monitor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>